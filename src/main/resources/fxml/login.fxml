            <MFXTextField fx:id="usernameText" floatMode="ABOVE" floatingText="USERNAME" prefHeight="30.0" prefWidth="210.0" promptText="Username..." stylesheets="@../css/app.css" />
            <MFXPasswordField fx:id="passwordText" floatMode="ABOVE" floatingText="PASSWORD" prefColumnCount="10" promptText="Password..." />
            <VBox fx:id="loginStateBox" alignment="CENTER" prefHeight="0.0" prefWidth="100.0" spacing="10.0" visible="false">
               <children>
                  <MFXButton fx:id="loginButton" buttonType="RAISED" onAction="#onLoginButtonClick" stylesheets="@../css/app.css" text="Login">
                     <styleClass>
                        <String fx:value="main-button" />
                        <String fx:value="round-corners" />
                     </styleClass>
                  </MFXButton>
                  <Text text="if you don't have an account please:" />
                  <MFXButton fx:id="registerButton" buttonType="RAISED" onAction="#onRegisterButtonClick" stylesheets="@../css/app.css" text="Register">
                     <styleClass>
                        <String fx:value="white-button" />
                        <String fx:value="round-corners" />
                     </styleClass>
                  </MFXButton>
               </children>
            </VBox>
            <VBox fx:id="registerStateBox" alignment="CENTER" minHeight="0.0" prefHeight="0.0" prefWidth="100.0" spacing="10.0">
               <children>
                  <MFXPasswordField fx:id="secondPasswordText" floatMode="ABOVE" floatingText="CONFIRM PASSWORD" prefColumnCount="10" promptText="Password..." />
                  <MFXButton fx:id="registerButton1" buttonType="RAISED" onAction="#onRegisterButtonClick" stylesheets="@../css/app.css" text="Register">
                     <styleClass>
                        <String fx:value="white-button" />
                        <String fx:value="round-corners" />
                     </styleClass>
                  </MFXButton>
                  <Text text="have an account? Please:" />
                  <MFXButton fx:id="loginButton1" buttonType="RAISED" onAction="#onLoginButtonClick" stylesheets="@../css/app.css" text="Login">
                     <styleClass>
                        <String fx:value="main-button" />
                        <String fx:value="round-corners" />
                     </styleClass>
                  </MFXButton>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
   <top>
      <Text fx:id="titleText" text="SKLEP DB" BorderPane.alignment="CENTER">
         <font>
            <Font size="50.0" />
         </font>
      </Text>
   </top>
   <padding>
      <Insets top="20.0" />
   </padding>
</BorderPane>
